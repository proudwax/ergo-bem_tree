ctx = '.order-cart'
{ctx} {
	background: #fff;
	margin-left: -1rem;
	margin-right: -1rem;
	
	&__header{
		border-bottom: 1px solid #e6e6e6;
		padding: 1rem;
		display: flex;
		flex-flow: row wrap;
		align-items: center;
	}
	
	&__title, &__amount, &__price{
		display: inline-block;
		font-size: 15px;
		line-height: 18px;		
	}
	
	&__title{
		width: 50%;
		font-size: 18px;
		line-height: 22px;
	}

	&__amount, &__price{
		width: 25%;
	}
	
	&__content{
		padding: 1rem;	
	}
	
	&__footer{
		border-top: 1px solid #e6e6e6;
		padding: 1rem;
	}
	
	&__total{
		font-size: 18px;
		line-height: 22px;	
	}
}