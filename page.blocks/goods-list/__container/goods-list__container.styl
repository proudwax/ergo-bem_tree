ctx = '.goods-list'
{ctx} {
	
	&__container{
		display: flex;
		flex-flow: row wrap;
		position: relative;
		z-index: 1;
	}
	
	&__spin{
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		display: flex;
		justify-content: center;
		z-index: -1;
		opacity: 0;
		visibility: hidden;
		background: rgba(255, 255, 255, .75);
		transition: all 0.15s ease-out 0s;
		
		&_visible{
			visibility: visible;
			z-index: 10;
			opacity: 1;
		}
	}
}