ctx = '.breadcrumbs'
{ctx} {
	margin: -1rem 1rem 1rem 1rem;

	.material-icons{
		font-size: 15px;
		line-height: 18px;
	}

	&__list{
		display: inline-block;
		padding: 0;
		margin: 0;
	}

	&__item{
		display: inline-block;
		list-style-type: none;
		vertical-align: middle;

		&:before{
			font-family: 'Material Icons';
			content: '\E315';
			display: inline-block;
			vertical-align: middle;
			font-size: 15px;
			line-height: 18px;
		}

		&_home{
			&:before{
				content:none;
			}
		}
	}

	&__link{
		color: #333;
		display: inline-block;
		line-height: 18px;
		height: 18px;
		font-size: 15px;
		vertical-align: middle;
		text-decoration: none;
		transition: color 0.15s ease-out;

		&_hovered{
			color: #f37d2f;
		}
	}
}