.swiper__slide{
	background-repeat: none;
}
.slider-content__inner{
	max-width: 50%;
}
.swiper__slide.swiper__slide_content-background{
	color: #fff;
}
.swiper__slide_content-background .slider-content__inner{
	padding: 1.5rem;
	background-color: rgba(0, 0, 0, .5);
}
.swiper__slide_content-position_right .slider-content__inner{
	margin-left: 50%;
}

.swiper__slide_theme_white{
	color: #fff;
	
	&.swiper__slide_content-background{
		color: #333;
	}
	
	&.swiper__slide_content-background .slider-content__inner{
		padding: 1.5rem;
		background-color: rgba(255, 255, 255, .75);
	}
}

.slider-content{
	padding: 0 5rem;
	width: 100%;
}
.slider-content__title{
	font: 300 2.4rem/2.6rem "Roboto",Helvetica,sans-serif;
	margin: 1rem 0;
}
.swiper__slide_title-shadow .slider-content__title{
	text-shadow: 0 2px 2px rgba(0, 0, 0, 0.14), 0 3px 1px rgba(0, 0, 0, 0.2), 0 1px 5px rgba(0, 0, 0, 0.12);
}
.slider-content__text{
	font: 100 1.5rem/1.6rem "Roboto",Helvetica,sans-serif;
}

@media only screen and (max-width: 62em) {
	.slider-content__title{
		font: 300 1.4rem/1.6rem "Roboto",Helvetica,sans-serif;
		margin: 1rem 0;
	}
	.slider-content__text{
		font: 100 1rem/1.1rem "Roboto",Helvetica,sans-serif;
	}
}
.page_goods-card{
	.slider-content__title{
		font: 300 1.4rem/1.6rem "Roboto",Helvetica,sans-serif;
		margin: 1rem 0;
	}
	.slider-content__text{
		font: 100 1rem/1.1rem "Roboto",Helvetica,sans-serif;
	}
}