@import "../../libs/swiper/dist/css/swiper.min.css";


.swiper{
	margin-left:-1rem; 
	margin-right:-1rem;
}

.swiper-slide{
	position: relative;
	background-position: 50% 50%;
	background-size: cover;
	display: flex;
	flex-shrink: 0;
	align-items: center;
    opacity: 1;

	height: 400px;
	width: 100%;
}

.swiper-slide-active{
    opacity: 1;
}

.swiper-pagination-bullet{
	width: .75rem;
	height: .75rem;
	box-shadow:0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.2),0 1px 5px 0 rgba(0,0,0,.12);
}

.swiper-pagination-bullet-active{
	background:#f37d2f;
}

.swiper-button-prev,.swiper-container-rtl .swiper-button-next{
	background-image:url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M0%2C22L22%2C0l2.1%2C2.1L4.2%2C22l19.9%2C19.9L22%2C44L0%2C22L0%2C22L0%2C22z'%20fill%3D'%23f37d2f'%2F%3E%3C%2Fsvg%3E");
	left:10px;
	right:auto;
}

.swiper-button-next,.swiper-container-rtl .swiper-button-prev{
	background-image:url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M27%2C22L27%2C22L5%2C44l-2.1-2.1L22.8%2C22L2.9%2C2.1L5%2C0L27%2C22L27%2C22z'%20fill%3D'%23f37d2f'%2F%3E%3C%2Fsvg%3E");
	right:10px;
	left:auto;
}