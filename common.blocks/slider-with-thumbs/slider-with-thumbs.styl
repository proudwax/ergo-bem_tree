ctx = '.slider-with-thumbs'
{ctx} {
	margin-left: -1rem;
	margin-right: -1rem;
	position: relative;

	&__content{
		position: relative;
		top: 0;
		opacity: 0;
		transition: color 0.15s ease-out;
		width: 100%;

		&_visible{
			opacity: 1;
		}
	}

	&__spin{
		position: absolute;
		top: 0;
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
		transition: color 0.15s ease-out;

		&_invisible{
			opacity: 0;
			display: none;
		}
	}

	&_type_vertical &__content{
		display: flex;
		flex-flow: row nowrap;
		height: 300px;
		overflow: hidden;

		{ctx}__slider{
			width: calc(100% - 5rem);
		}
		
		{ctx}__slider {ctx}__slide{
	   		height: 300px;
    		width: 100%;
   	 	}

		{ctx}__thumbs{
			width: 5rem;
		}

		{ctx}__thumbs {ctx}__slide{
	   		height: 3rem;
	   		width: 3rem;
	   	 	background-clip: content-box;
	   	 	margin: .5rem 1rem;
   	 	}

   	 	{ctx}__thumbs {ctx}__slide:after{
   	 		position: absolute;
   	 		top: 0;
   	 		left: 0;
   	 		bottom: 0;
   	 		right: 0;
   	 		background: rgba(0,0,0,.2);
   	 		content: ' ';
   	 		opacity: 0;
	   	 	box-shadow: 0 3px 4px 0 rgba(0, 0, 0, 0.14), 0 3px 3px -2px rgba(0, 0, 0, 0.2), 0 1px 8px 0 rgba(0, 0, 0, 0.12);
	   	 	transition: all 0.3s ease;
   	 	}

   	 	{ctx}__thumbs {ctx}__slide_hovered{ctx}__slide:after{
   	 		cursor: pointer;
   	 		opacity: 1;
   	 	}
   	 	/*{ctx}__thumbs {ctx}__slide:hover{ctx}__slide:after,
   	 	{ctx}__thumbs {ctx}__slide:after:.swiper-slide-active{
   	 		
   	 	}*/
	}
}