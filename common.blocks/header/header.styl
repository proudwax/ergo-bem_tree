ctx = '.header'
{ctx} {
    background: #fff;
    font: 15px/18px 'Roboto', Helvetica, sans-serif;
    font-weight: 300;

    margin: 0 -1rem;
    padding: 0 1rem;

    &__inner{
    	box-sizing: border-box;
    	display: flex;
    	flex: 0 1 auto;
        flex-flow: column nowrap;
    	padding-top: 1rem;
    	padding-bottom: 1rem;
		align-items: flex-start;
    }

    &__col{
    	flex: 1 1 auto;
    	padding-bottom: 2rem;
    }

    &__col_text_center{
    	justify-content: center;
    }

    &__col_text_right{
    	justify-content: flex-end;
    }

    &__navigation{
    	flex-shrink: 1;
    }

	@media only screen and (min-width: 40em) {
		&__inner{
			flex-flow: row wrap;
		}	
		
		&__col{
			flex: 1 1 auto;
			padding-left: 1rem;
			padding-right: 1rem;
		}
	}
