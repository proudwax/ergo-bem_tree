ctx = '.header'
{ctx} {
    background: #fff;
    border-bottom: 1px solid #e6e6e6;
    font: 15px/18px 'Roboto', Helvetica, sans-serif;
    font-weight: 300;

    margin: 0 -1rem;
    padding: 0 1rem;

    &__row{
    	box-sizing: border-box;
    	display: flex;
    	flex: 0 1 auto;
    	flex-direction: row;
    	flex-wrap: wrap;
    }

    &__logo, &__contact, &__cart{
    	flex: 1 1 auto;
    	padding-left: 1rem;
    	padding-right: 1rem;
    	/*margin-right: -1rem;
    	margin-left: -1rem;*/
    }

    &__contact{
    	justify-content: center;
    }

    &__cart{
    	justify-content: right;
    }

    &__navigation{
    	flex-shrink: 1;
    }
}