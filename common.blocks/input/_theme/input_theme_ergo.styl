ctx = '.input_theme_ergo'
{ctx} {
    font-family: "Roboto",Helvetica,sans-serif;

    position: relative;

    display: inline-block;

    background: rgba(0, 0, 0, 0.2);

    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);

    // Decorative element (inner background)
    &:before
    {
        position: absolute;
        top: 1px;
        right: 1px;
        bottom: 1px;
        left: 1px;

        content: '';

        background: #fff;
    }

    .input__box
    {
        position: relative;

        display: block;

        -webkit-touch-callout: none;

        user-select: none;
    }

    .input__control
    {
        font: inherit;
        line-height: inherit;

        position: relative;

        display: inline-block;

        box-sizing: border-box;
        padding: 0;
        width: 100%;

        border: 0;
        outline: none;
        background: none;

        -webkit-appearance: none;

        // лишние отступы у текста
        &::-webkit-search-decoration
        {
            -webkit-appearance: none;
        }

        // нативный крестик
        &::-webkit-search-cancel-button
        {
            display: none;
        }

        &::-webkit-input-placeholder
        {
            color: #999;
            text-indent: 0;
        }

        &::-moz-placeholder
        {
            opacity: 1;
            color: #999;
        }

        &::-ms-clear
        {
            display: none;
        }
    }

    &.input_has-clear .input__control
    {
        text-overflow: ellipsis;
    }

    .input__clear
    {
        position: absolute;
        top: 0;
        right: 0;

        cursor: text;
        transition: opacity 0.1s ease-out;

        opacity: 0;
        background: 50% 50% no-repeat;

        &_visible
        {
            opacity: 0.3;

            &:hover
            {
                cursor: pointer;

                opacity: 1;
            }
        }
    }
	
	.input__geo{
        position: absolute;
        top: 0;
        left: 0;
		opacity: .3;

        cursor: text;
        transition: opacity 0.1s ease-out;
		
		&:hover{
			cursor: pointer;
			opacity: 1;
		}
	}

    &.input_focused
    {
        z-index: 1;

        box-shadow: 0 0 0 1px #f37d2f , inset 0 0 0 1px #f37d2f ;

        .input__control
        {
            text-overflow: clip; // fix ellipsis bug in Chrome
        }
    }

    &.input_disabled
    {
        background: rgba(0, 0, 0, 0.08);

        &:before,
        .input__clear
        {
            display: none;
        }

        .input__box,
        .input__control
        {
            color: rgba(0, 0, 0, 0.4);
            cursor: default;
        }
    }

    &.input_size_s .input__clear,
    &.input_size_m .input__clear
    {
        width: 24px;
        height: 24px;

        background-image: url(../../theme/_ergo/clear_size_s.svg);
        background-position: 7px 50%;
    }

    &.input_size_s .input__geo,
	&.input_size_m .input__geo{
        width: 24px;
        height: 24px;

        background-image: url("data:image/png;base64,");

        background-position: 50% 50%;
		background-repeat: no-repeat;
    }
	
    &.input_size_s
    {
        font-size: 13px;
        line-height: 16px;

		.spin_geo{
			margin: 4px;
		}
		
        .input__control
        {
            height: 24px;
            padding: 0 6px;
        }

		&.input_type_geo .input__box{
            padding-left: 24px;
        }
		
        &.input_has-clear .input__box
        {
            padding-right: 24px;
        }

    }

    &.input_size_m
    {
        font-size: 13px;
        line-height: 16px;

		.spin_geo{
			margin: 6px;
		}
		
        .input__control
        {
            height: 28px;
            padding: 0 8px;
        }

		&.input_type_geo .input__box{
            padding-left: 28px;
        }
		
        &.input_has-clear .input__box
        {
            padding-right: 28px;
        }

        .input__clear
        {
            width: 28px;
            height: 28px;

            background-position: 9px 50%;
        }
		
		.input__geo{
	        width: 28px;
            height: 28px;	
		}
    }

    &.input_size_l .input__clear,
    &.input_size_xl .input__clear
    {
        width: 32px;
        height: 32px;

        background-image: url(../../theme/_ergo/clear_size_l.svg);
        background-position: 9px 50%;
    }
	
    &.input_size_l .input__geo,
    &.input_size_xl .input__geo{
        width: 32px;
        height: 32px;

        background-image: url("data:image/png;base64,");
        background-position: 50% 50%;
		background-repeat: no-repeat;
    }	

    &.input_size_l
    {
        font-size: 15px;
        line-height: 18px;
		
		.spin_geo{
			margin: 4px;
		}
		
        .input__control
        {
            height: 32px;
            padding: 0 10px;
        }
		
		&.input_type_geo .input__box{
            padding-left: 32px;
        }

        &.input_has-clear .input__box
        {
            padding-right: 32px;
        }
    }

    &.input_size_xl
    {
        font-size: 18px;
        line-height: 22px;

		.spin_geo{
			margin: 6px;
		}
		
        .input__control
        {
            height: 38px;
            padding: 0 12px;
        }

		&.input_type_geo .input__box{
            padding-left: 38px;
        }
		
        &.input_has-clear .input__box
        {
            padding-right: 38px;
        }

        .input__clear
        {
            width: 38px;
            height: 38px;

            background-position: 12px 50%;
        }
		
		.input__geo{
			width: 38px;
            height: 38px;	
		}
    }

    &.input_has-clear .input__control
    {
        padding-right: 0;
    }

    &.input_width_available
    {
        width: 100%;
    }

    &.input_type_password .input__control
    {
        text-overflow: clip;
    }
	
	&.input_size_s .input__geo_spin,
	&.input_size_m .input__geo_spin,
	&.input_size_l .input__geo_spin,
    &.input_size_xl .input__geo_spin{
		opacity: 1;
		background-image: none;
	}	
}

.control-group
{
    {ctx} {
        &:before
        {
            right: 0;
        }

        &.input_focused:before
        {
            right: 1px;
        }
    }

    > {ctx}:last-child,
    > :last-child {ctx}
    {
        &:before
        {
            right: 1px;
        }
    }
}
