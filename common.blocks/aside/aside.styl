@keyframes sidebar_theme_ergo {
	0% {
		visibility: visible;
		margin: 0;
		opacity: 1;
		transform: translateX(0px);
	}
	99% {
		margin: 0;
	}
	100% {
		visibility: hidden;
		margin: -9999px 0 0 -9999px;
		opacity: 0;
		transform: translateX(-208px);
	}
}

@keyframes sidebar_theme_ergo_visible {
	0% {
		opacity: 0;
	}
	100% {
		opacity: 1;
		margin: 0;
		transform: translateX(0px);
	}
}