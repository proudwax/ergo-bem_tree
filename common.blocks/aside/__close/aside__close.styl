ctx = '.aside'
{ctx} {
	&__close{
		position: absolute;
		top: 29px;
		left: 143px;
		padding: 5px;
		
		&:after{
			border-radius: 50%;
			content: ' ';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			opacity: 0;
			box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.2), 0 1px 5px 0 rgba(0,0,0,0.12);
			background: inherit;
			z-index: -1;
			transition: all 0.15s ease-out 0s;
		}

		.link_hovered&:after{
			background: #e6e6e6;
			opacity: 1;
		}
		
		.icon.material-icons{
			line-height: 1.5rem;
			font-size: 1.5rem;
		}
	}
	
	&_display{
		.aside__close{
			display: none;
		}
	}
}
