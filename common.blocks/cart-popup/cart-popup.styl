ctx = '.cart-popup'
{ctx} {
	box-sizing: border-box;
	width: 300px;
	
	&__header{
		padding: 1rem;
		border-bottom: 1px solid #e6e6e6;
	}
	
	&__item{
		border-bottom: 1px solid #e6e6e6;
		display: flex;
		position: relative;
		
		&:after{
			content: '';
			transition: background 0.15s ease-out 0s;
		}

		&:hover:after{
			content: '';
			position: absolute;
			width: 100%;
			height: 100%;
			background: rgba(150, 150, 150, 0.1);
			left: 0;
		}
	}	
	
	&__item:last-child{
		border-bottom: 0;
	}
	
	&__trash{
		flex: 0 1 auto;
		align-self: center;
		padding: 1rem;
		position: relative;
		z-index: 1;
	}
	
	&__footer{
		padding: 1rem;
		border-top: 1px solid #e6e6e6;
		text-align: center;
	}
}