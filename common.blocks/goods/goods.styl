ctx = '.goods'
{ctx} {
	position: relative;
	text-align: center;
	transition: color .3s ease;
	background-color: #fff;

	&:before{
		content: "";
		display: block;
		padding-top: 100%;
	}

	&_shadow{
		box-shadow: 0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.2),0 1px 5px 0 rgba(0,0,0,.12);
	}

	&_border{
		border: 1px solid #e6e6e6;
	}

	&__container{
		position: absolute;
		top: 0rem;
		left: 0rem;
		right: 0rem;
		bottom: 0rem;
		overflow: hidden;
		padding: 1rem;
	}
	&__image{
		width: 100%;
		height: 100%;
	
		img{
			max-width: 100%;
			max-height: 100%;
			display: inline-block;
			transition:  all .3s ease;
		}
	}

	&_showcase&_hovered &__image img{
		transform: scale(1.1);
		transition:  all .3s ease;
	}

	&__content{
		width: 100%;
		position: absolute;
		bottom: 0;
		border-top: 1px solid #ddd;
		background: rgba(255,255,255,.8);
		margin-left: -1rem;
		margin-right: -1rem;
		padding: 1rem;
		box-sizing: border-box;
		text-align: left;
	}

	&__name{
		margin-bottom: .5rem;
		text-align: left;
		font-weight: 500;
		font-size: 15px;
	    line-height: 18px;

	    .link{
			color: #333;
			text-decoration: none;
		}

		.link_hovered{
			color: #f37d2f;
		}
	}

	&__price{
		font-size: 22px;
	    line-height: 28px;

	    &_current{
	    	&_best{
	    		color: #f37d2f;
	    		/*color: #ff0000;*/
	    	}
	    }

	    &_old{
	    	position: absolute;
	    	margin-top: -.7em;
	    	font-size: .7em;
	    	text-decoration: line-through;
	    }

	    .fa-rub{
			padding-left: 3px;
			font-size: 13px;
		}
	}

	&__price, &__action{
		display: inline-block;
		width: 50%;
	}

	&__action{
		text-align: right;
	}
}