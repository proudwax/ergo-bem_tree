.goods{
	margin: 1rem;
	padding: 1rem;
	position: relative;
	text-align: center;
	transition: color .3s ease;
}
.goods:before{
	content: "";
	display: block;
	padding-top: 100%;
}
.goods_shadow{
	box-shadow:0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.2),0 1px 5px 0 rgba(0,0,0,.12);
}
.goods__container{
	position: absolute;
	top: 1rem;
	left: 1rem;
	right: 1rem;
	bottom: 1rem;
	overflow: hidden;
}
.goods__image{
	width: 100%;
	height: 100%;
}
.goods__image img{
	max-width: 100%;
	max-height: 100%;
	display: inline-block;
	transition:  all .3s ease;
}
.goods_showcase.goods_hovered .goods__image img{
	max-width: 105%;
	max-height: 105%;	
	margin: -2.5%;
	transition:  all .3s ease;
}
.goods__content{
	width: 100%;
	position: absolute;
	bottom: 0;
	border-top: 1px solid #ddd;
	background: rgba(255,255,255,.8);
	padding: .5rem;
	box-sizing: border-box;
	text-align: left;
}
.goods__name{
	margin-bottom: .5rem;
	text-align: left;
	font-weight: 500;
	font-size: 15px;
    line-height: 18px;
}
.goods__name .link{
	color: #333;
}
.goods__name .link_hovered{
	color: #f37d2f;
}
.goods__price{
	font-size: 22px;
    line-height: 28px;
}
.goods__price .fa-rub{
	padding-left: 3px;
	font-size: 13px;
}
.goods__price, .goods__action{
	display: inline-block;
}
.goods__action{
	position: absolute;
	right: .5rem;
	bottom: .5rem;
	width: 50%;
	text-align: right;
}

ctx = '.goods_in-mimi-cart'
{ctx} {
	width: 100%;
	height: 50px;
	overflow: hidden;

	&.goods{
		padding: 0;
		margin: 10px 0;
		outline: 1px solid rgba(194, 100, 37, 0);
	}
	&.goods:before{
		padding-top: 0;
	}
	&.goods_hovered{
		transition: all 0.3s ease 0s;
		outline: 1px solid rgba(194, 100, 37, .5);
		/*background: rgba(243, 125, 47, .1);*/
	}
	.goods__container{
		position: relative;
		top: 0;
		right: 0;
		left: 0;
		bottom: 0;
	}
	.goods__image{
		width: 50px;
		height: 50px;
		display: inline-block;
		float: left;
	}
	.goods__content{
		background: inherit;
		position: relative;
		display: inline-block;
		border: none;
		margin: 0 10px;
		padding: 0;
		width: calc(100% - 70px);
		float: left;
		overflow: hidden;
	}
	.goods__action{
		line-height: 50px;
		bottom: 0;
		right: 0;
	}
	.goods__action .button{
		opacity: 0.2;
		transition: all 0.3s ease 0s;	
	}
	&.goods_hovered .goods__action .button{
		opacity: 1;
	}
	.goods__name, .goods__price{
		margin: 0;
		line-height: 25px;
		font-size: 13px;
	}	
	.goods__price .fa-rub{
		font-size: 9px;
	}
}