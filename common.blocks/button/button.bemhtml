block('button')(
    match(function(){ return this.ctx.badge; })(
		elem('text').tag()('b'),
		content()(function(){
			return [ applyNext(), { elem: 'badge', content: this.ctx.badge }];
		})
	),

	elem('badge').tag()('span'),

    mod('cart', 'white')(
    	content()(function(){
    		return [
    			applyNext(),
    			{
    				block: 'icon',
    				mods: { cart: 'white' }
    			}
    		]
    	})	
    )
);
