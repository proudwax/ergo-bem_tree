ctx = '.form__button'
{ctx} {
	border-top: 1px solid #e6e6e6;
	padding: 1rem;
	margin-right: -1rem;
	margin-left: -1rem;
	margin-top: 1rem;
	box-sizing: border-box;

	&_fixed{
		&_bottom{
			position: fixed;
			bottom: 0;
			width: 100%;
		}
	}

	&_shadow{
		box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.2), 0 1px 5px 0 rgba(0,0,0,0.12);
	}
}