ctx = '.cart-item'
{ctx} {
	&_view_cart-popup{
		display: flex;
		flex: 1 1 auto;
		flex-flow: row nowrap;
		align-items: center;
		padding: 1rem;
		
		{ctx}__image{
			width: 50px;
			flex: 0 1 auto;
			overflow: hidden;
			
			img{
				width: 100%;
			}
		}
		
		{ctx}__name{
			flex: 0 1 auto;
			padding-left: .5rem;
			position: relative;
			z-index: 1;		
		}
	}
}