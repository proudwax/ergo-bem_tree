ctx = '.cart-item'
{ctx} {
	&_view_cart-popup{
		display: flex;
		align-items: center;
		width: 100%;
		
		flex: 1 1 auto;
		flex-flow: row nowrap;

		padding: 1rem;
		
		{ctx}__content{
			width: 75%;
			display: flex;
			align-items: center;			
		}
		
		{ctx}__image{
			display: inline-block;
			max-width: 50px;
			max-height: 50px;
			overflow: hidden;
			
			img{
				width: 100%;
				height: 100%;
			}
		}
		
		{ctx}__name{
			display: inline-block;
			box-sizing: border-box;
			padding: 0 .5rem;
			position: relative;
			z-index: 1;		
		}
	}
}