ctx = '.cart-item'
{ctx} {
	&_view_cart{
		display: flex;
		align-items: center;
		width: 100%;
		
		{ctx}__content{
			width: 50%;
		}		
		
		{ctx}__amount, {ctx}__price{
			width: 25%;
		}		

		{ctx}__amount, {ctx}__name, {ctx}__price{
			font-size: 15px;
			line-height: 18px;
		}
		
		{ctx}__image{
			max-width: 100px;
			max-height: 100px;
			display: inline-block;
			
			.image{
				width: 100%;
				height: 100%;
			}
		}

		{ctx}__name{
			display: inline-block;
			box-sizing: border-box;
			padding: 0 .5rem;
			vertical-align: top;
			line-height: 100px;
		}
	}
}