block('sidebar')(
	def()(function(){
		return applyNext({
			_textButton: this.ctx.textButton
		});
	}),

	js()(true),
	
	elem('button').content()(function() {
        return [
            { elem : 'text', content : this._textButton }
        ];
    }),
	
	elem('aside').content()(function(){
		return [
			{ elem: 'title', content: this._textButton },
			{ elem: 'content', content: applyNext() }
		]
	})
)