ctx = '.footer'
{ctx} {
    background: #f6f5f3;
    background: inherit;
    border-top: 1px solid #e6e6e6;

    margin: 0 -1rem;
    padding: 1rem 1rem 0 1rem;

	&__inner{
		box-sizing: border-box;
    	display: flex;
    	flex: 1 1 auto;
    	flex-flow: row wrap;
    	padding: 1rem;
	}
	
	.copyright_right{
		flex: 1 1 auto;
		align-self: flex-end;
	}
}