.spin_theme_ergo
{
    position: absolute;

    display: inline-block;
    visibility: hidden;

    box-sizing: border-box;

    borderWidth = 2px;
    border: borderWidth solid transparent;
    border-radius: 50%;

    align-self: center;

    &:after
    {
        content: '\00A0';
    }

    &.spin_visible
    {
        position: relative;

        visibility: visible;

        animation: spin_theme_islands 1s infinite linear;

        background: 0 0 no-repeat url(spin_theme_ergo.gif);

        // `1deg` is needed to prevent FF bug after minification (`0deg` => `0`)
        background: linear-gradient(1deg, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0));

        backface-visibility: hidden; // Accelerate animation
    }

    sizeList = (16 24 28 32 38);
    bgShift = -(borderWidth);

    for sizeVal, i in xs s m l xl {
        &.spin_size_{sizeVal}
        {
            line-height: sizeList[i]px;

            width: sizeList[i]px;
            height: sizeList[i]px;

            background-position: -(borderWidth) bgShift;
        }

        bgShift -= sizeList[i] + 1;
    }
}

@keyframes spin_theme_islands
{
    from
    {
        border-top-color: #f37d2f;
        border-left-color: #f37d2f;
        transform: rotate(0);
    }
    to
    {
        border-top-color: #f37d2f;
        border-left-color: #f37d2f;
        transform: rotate(360deg);
    }
}
