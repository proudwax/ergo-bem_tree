paddingLeft = (30 30 34 40);
paddingVert = (3 4 5 6);
paddingHor = (10 13 15 20);

tipSize = (14 14 15 15);

.menu-item_theme_ergo
{
    position: relative;
	padding: 0 20px;
    white-space: nowrap;
	background-size: 15px 15px;
    background-position: 20px 50%;
	transition: all 0.15s ease-out 0s;

    &.menu-item_disabled
    {
        opacity: 0.3;
    }

    .link_disabled
    {
        cursor: text;
    }

    &.menu-item_checked
    {
        background: 0 50% no-repeat url(../../theme/_ergo/tip.svg);
    }

    &.menu-item_hovered
    {
        cursor: pointer;

        background-color: #f37d2f;
		color: #fff;
    }

    &.menu-item_type_link
    {
        .link
        {
            text-decoration: none;

            color: inherit;
            outline: none;

            /* Fit clickable area to `menu-item` size */
            &:after
            {
                position: absolute;
                top: 0;
                right: 0;
                bottom: 0;
                left: 0;

                content: '';
            }
        }
    }

    .icon_home{
        font-size: inherit;
        vertical-align: bottom;
        line-height: inherit;
        height: inherit;
    }
}

for sizeVal, i in s m l xl {
    .menu_size_{sizeVal}
    {
        .menu-item_theme_ergo
        {
            padding: 0 (paddingHor[i])px;

            background-size: (tipSize[i])px (tipSize[i])px;
            background-position: (paddingHor[i])px 50%;
        }

        .menu__group + .menu-item_theme_ergo
        {
            margin-top: (paddingVert[i])px;
        }

        &[class*='menu_mode'] .menu-item_theme_ergo,
        .menu__group-title ~ .menu-item_theme_ergo
        {
            padding: 0 (paddingLeft[i])px;
        }
    }
}
